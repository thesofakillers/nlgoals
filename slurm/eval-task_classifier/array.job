#!/bin/bash

#SBATCH --partition=gpu
#SBATCH --gres=gpu:1
#SBATCH --job-name=TaskClassifier
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=18
#SBATCH --time=0:10:00
#SBATCH --mem-per-gpu=120G
#SBATCH --array=1-4%4
#SBATCH --output=slurm/outputs/task_classifier_eval_%A_%a.out

source "./slurm/.secrets"

module purge
module load 2022
module load Anaconda3/2022.05

source activate nlgoals

HPARAMS_FILE=slurm/eval-task_classifier/array.txt

srun python -u src/nlgoals/run/calvin/eval-task_classifier.py \
  --data.data_dir=/scratch-shared/gstarace/repos/thesis/data/calvin/task_D_D/ \
  $(head -$SLURM_ARRAY_TASK_ID $HPARAMS_FILE | tail -1)

