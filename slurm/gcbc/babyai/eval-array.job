#!/bin/bash

#SBATCH --partition=gpu
#SBATCH --gres=gpu:1
#SBATCH --job-name=GCBC-E
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=18
#SBATCH --time=00:30:00
#SBATCH --mem-per-gpu=120G
#SBATCH --array=1-12%12
#SBATCH --output=slurm/outputs/gcbc_eval_array_%A_%a.out

source "./slurm/.secrets"

module purge
module load 2022
module load Anaconda3/2022.05

source activate nlgoals

HPARAMS_FILE="slurm/gcbc/babyai/eval-array.txt"

srun python src/nlgoals/run/babyai/eval-gmg.py \
  --eval.num_rollouts 1000 \
  --eval.max_steps 50 \
  --eval.verbose false \
  --conditioning goal \
  --clipt_checkpoint checkpoints/babyai/cclipt/last.ckpt \
  --clipt.contextualize_text true \
  --clipt.precomputed_clip false \
  --save_dir outputs/babyai/gcbc_cclipt/multi_task/ \
  $(head -$SLURM_ARRAY_TASK_ID $HPARAMS_FILE | tail -1)
