#!/bin/bash

#SBATCH --partition=gpu
#SBATCH --gres=gpu:1
#SBATCH --job-name=ENV
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=18
#SBATCH --time=00:30:00
#SBATCH --mem-per-gpu=12G
#SBATCH --output=slurm/outputs/environment_install_%A.out

module purge
module load 2022
module load Anaconda3/2022.05

conda env remove -n nlgoals
conda create -n nlgoals python=3.8.5 -y
source activate nlgoals
pip install -r requirements/pre-reqs.txt
pip install -r requirements/requirements-complete.txt
